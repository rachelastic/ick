generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ick {
  id               Int      @id @default(autoincrement())
  content          String
  tags             String[] // stores array of tags
  severity         Int      @default(1) // 1-10 scale
  sentiment        String   @default("neutral") // "gross", "no way", "acceptable"
  opportunity_score Int     @default(5) // 1-10 business opportunity potential
  category         String   @default("general") // main category like "tech", "social", "work", etc.
  reasoning        String?  // AI's reasoning for the analysis
  user_type        String   @default("venter") // "venter", "hunter", "both"
  
  // Metadata
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  // Optional user tracking (for future features)
  user_id          String?  // Anonymous ID or user ID if you add auth
  ip_hash          String?  // Hashed IP for basic spam prevention
  
  // Engagement metrics (for future features)
  views            Int      @default(0)
  upvotes          Int      @default(0)
  downvotes        Int      @default(0)
  
  @@index([createdAt])
  @@index([category])
  @@index([sentiment])
  @@index([severity])
  @@index([opportunity_score])
}
